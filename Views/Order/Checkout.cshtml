
@section style {
    <style>

        .rower {
            display: -ms-flexbox; /* IE10 */
            display: flex;
            -ms-flex-wrap: wrap; /* IE10 */
            flex-wrap: wrap;
            margin: 0 -16px;
        }

        .coler-25 {
            -ms-flex: 25%; /* IE10 */
            flex: 25%;
        }

        .coler-50 {
            -ms-flex: 50%; /* IE10 */
            flex: 50%;
        }

        .coler-75 {
            -ms-flex: 75%; /* IE10 */
            flex: 75%;
        }

        .coler-25,
        .coler-50,
        .coler-75 {
            padding: 0 16px;
        }

        .containerer {
            background-color: #f2f2f2;
            padding: 5px 20px 15px 20px;
            border: 1px solid lightgrey;
            border-radius: 3px;
        }

        input[type=text] {
            width: 100%;
            margin-bottom: 20px;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        labeler {
            margin-bottom: 10px;
            display: block;
        }

        .icon-containerer {
            margin-bottom: 20px;
            padding: 7px 0;
            font-size: 24px;
        }

        .btner {
            background-color: #4CAF50;
            color: white;
            padding: 12px;
            margin: 10px 0;
            border: none;
            width: 100%;
            border-radius: 3px;
            cursor: pointer;
            font-size: 17px;
        }

            .btner:hover {
                background-color: #45a049;
            }

        spaner.price {
            float: right;
            color: grey;
        }

        /* Responsive layout - when the screen is less than 800px wide, make the two columns stack on top of each other instead of next to each other (and change the direction - make the "cart" column go on top) */
        (max-width: 800px) {
            .row

        {
            flex-direction: column-reverse;
        }

        .coler-25 {
            margin-bottom: 20px;
        }
        }
    </style>
}
<div class="rower">
    <div class="coler-75">
        <div class="containerer">
            @if (User.Identity.IsAuthenticated)
            {
                <form id="checkout" method="post" asp-action="Checkout">
                    <div class="row">
                        <div class="form-group col-sm-12">
                            <label class="control-label">DeliveryAddress</label>
                            <input name="DeliveryAddress" placeholder="DeliveryAddress" class="form-control" />
                        </div>
                        <button type="button" onclick="submitCheckoutForm(this)" value="Continue to checkout" class="btn btn-success">Continue to checkout</button>
                    </div>
                </form>
            }
            else
            {
                <div class="row justify-content-center">
                    <div class="card col-md-12">
                        <div class="bg-light">
                            <h1 class="tagcolor" style="color:mediumblue">Login</h1>
                            <p class="tagcolor" style="color:mediumblue">Please fill in this form login</p>
                            <hr class="tagcolor" style="color:mediumblue">

                        </div>
                        <form asp-action="Login" asp-controller="Customer">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="control-label">Email/Username</label>
                                    <input class="form-control" placeholder="Enter email" name="username" type="text" required/>
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="control-label">Password</label>
                                    <input class="form-control" placeholder="Enter password" name="Password" type="password" required/>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" required> Remember me
                                    </label>
                                </div>
                            </div>
                            <input name="isCheckout" type="hidden" hidden value="true"/>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-success"/>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class=" card col-md-12">
                        <div class="card-body ">
                            <div class="bg-light">
                                <h1 class="tagcolor" style="color:mediumblue">Register</h1>
                                <p class="tagcolor" style="color:mediumblue">Please fill in this form to create an account.</p>
                                <hr class="tagcolor" style="color:mediumblue">

                            </div>
                            <form asp-action="Create" asp-controller="Customer">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label class="control-label">FirstName</label>
                                        <input name="FirstName" class="form-control" />
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label class="control-label">LastName</label>
                                        <input name="LastName" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label class="control-label">Phone</label>
                                        <input name="Phone" class="form-control" />
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label class="control-label">Email</label>
                                        <input name="Email" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label class="control-label">Address</label>
                                        <input name="Address" class="form-control" />
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label class="control-label">Gender</label>
                                        <select name="Gender" class="form-control">
                                            <option value="" selected="selected">Select Gender</option>
                                            <option value="M">Male</option>
                                            <option value="F.">Female</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label class="control-label">Username</label>
                                        <input name="Username" class="form-control" />
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label class="control-label">Password</label>
                                        <input type="password" name="Password" class="form-control" />
                                    </div>
                                </div>
                                <input name="isCheckout" type="hidden" hidden value="true"/>
                                <div class="form-group ">
                                    <input type="submit" value="Submit" class="btn btn-success col-sm-12" />
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>

    <div class="coler-25">
        <div class="containerer">
            <div class="notification text-success">
                <h5>
                    Shopping Basket<i class="fa fa-fw fa-shopping-cart"></i><span class="badge" id='newTotalQuantityLabel'></span>

                </h5>
            </div>
            <div class="card-body " id="cart-menu">



            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script>
        function submitCheckoutForm(e) {
            let form = document.querySelector("#checkout");
            const cart = localStorage.getItem("cart") || "[]";
            const json = JSON.parse(cart);
            let count = 0;
            json.forEach(item => {
                $('#checkout').append(`<input type='hidden' name='orders[${count}].itemId' value='${item.itemId}' />`);
                $('#checkout').append(`<input type='hidden' name='orders[${count}].quantity' value='${item.quantity}' />`);
                count++;
            });
            form.submit();
        }
    </script>
}