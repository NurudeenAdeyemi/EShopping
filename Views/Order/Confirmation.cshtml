@model IEnumerable<OrderItem>

<h1>
    "Thanks!", "Thanks for your order! We will contact you for more information", "success"
</h1>-----

<table class="table">
    <thead>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Order Date
            </th>

            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>Sub-Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderItem in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelOrderItem => orderItem.Item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelOrderItem => orderItem.Order.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelOrderItem => orderItem.Quantity)
                </td>
                <td>
                    &#8358 @Html.DisplayFor(modelOrderItem => orderItem.UnitPrice)
                </td>
                <td>
                    &#8358 @(orderItem.Quantity * orderItem.UnitPrice)

                </td>
            </tr>
        }
    </tbody>
</table>

<small class="text-success font-weight-bolder">Manager: Vegebasket</small>     <p></p>
<a type="button" class="text-success btn btn-outline-success" asp-action="Index" asp-controller="Home">Go back to Home Page</a>


@section Scripts
{
    <script>
        localStorage.setItem("cart", JSON.stringify([]));
    </script>
}
